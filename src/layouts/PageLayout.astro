---
import Footer from "../components/astro/Footer.astro";
import HeaderPage from "../components/astro/HeaderPage.astro";
import Navbar from "../components/astro/Navbar.astro";
import BaseLayout from "./BaseLayout.astro";
import backgroundMain from "../assets/images/pattern.webp";

const { headerPage } = Astro.props;
---

<BaseLayout headerPage={headerPage}>
  <body>
    <div class="hero">
        <HeaderPage />
      <main
        class="hero-main"
        style={`background-image: url(${backgroundMain.src});`}
      >
        <Navbar />
        <slot />
        <Footer />
      </main>
    </div>
  </body>
</BaseLayout>

<style lang="scss">
  .hero {
    display: grid;
    position: relative;
    max-width: 140rem;
    margin-inline: auto;
    background-color: #333;
    margin: 0;

    &-main {
      display: grid;
      background-color: #ffffff;
      background-attachment: fixed;
      background-size: cover;

      @media (width >= 300px) {
        padding-inline: 1rem;
      }

      @media (width >= 1000px) {
        gap: var(--spacing);
        height: 100dvh;
        overflow-y: scroll;
      }

      @media (width >= 1400px) {
        padding-inline: var(--spacing);
      }
    }
  }
</style>
