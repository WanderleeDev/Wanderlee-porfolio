---
import CodeViewer from "./CodeViewer.astro";
import Presentation from "./Presentation.astro";
---

<div class="presentation">
  <CodeViewer />
  <div class="presentation-text position-center">
    <Presentation />
  </div>
</div>

<style lang="scss">
  .presentation {
    position: relative;
    width: 100%;
    height: 100%;
    display: grid;
    align-items: center;

    &-text {
      width: 100%;
      position: absolute;
      opacity: 0;
      animation: fadeDescription 1s ease 5.5s forwards;
      pointer-events: none;
      user-select: none;
      translate: 0 3rem;
    }
  }
</style>
