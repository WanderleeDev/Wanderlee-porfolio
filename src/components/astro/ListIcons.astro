---
import { Icon } from "astro-icon/components";
interface Props {
  technologies: string[];
  gap?: number;
}

const { technologies, gap } = Astro.props;
---

{
  technologies.length > 0 && (
    <figure class="listIcons" style={`gap: ${gap ?? "0.5"}rem;`}>
      {technologies.map((tech) => (
        <Icon
          class="listIcons-icon"
          name={`myTech/${tech}`}
          width={25}
          height={25}
          title={tech}
        />
      ))}
    </figure>
  )
}

<style lang="scss">
  .listIcons {
    display: flex;
    justify-content: flex-start;
    align-items: center;

    &-icon {
      width: fit-content;
    }
  }
</style>
